# ===========================================
# SHARED INFRASTRUCTURE CONFIGURATION
# ===========================================
# This file contains shared variables for inter-service communication
# Copy this file to .env and update the values for your environment

# ===========================================
# TIMEZONE CONFIGURATION
# ===========================================
# Set the timezone for all containers and services
# Examples: UTC, Africa/Cairo, America/New_York, Europe/London, Asia/Tokyo
# For Egypt timezone, use: Africa/Cairo
# Default: UTC
TZ=UTC

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=rune
POSTGRES_PASSWORD=rune_password
POSTGRES_DB=rune_db

# ===========================================
# MESSAGE BROKER CONFIGURATION
# ===========================================
RABBITMQ_USER=rune
RABBITMQ_PASSWORD=rune_password

# ===========================================
# API SERVICE CONFIGURATION
# ===========================================
# Environment (dev, prod, etc.)
ENVIRONMENT=prod
CORS_ORIGINS=http://frontend:3000,http://localhost:3000,https://frontend:3000,https://localhost

# JWT Settings - CHANGE THESE IN PRODUCTION!
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Encryption Key - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=8eLl-T7Un3Qj5vN9sP2wK4bR6xZ0cF1mA8yD7gH3iE0=

# ===========================================
# WORKER CONFIGURATION
# ===========================================
WORKFLOW_PREFETCH=10
WORKFLOW_CONCURRENCY=1

# ===========================================
# AI CONFIGURATION
# ===========================================
GOOGLE_API_KEY=your-google-api-key-here