# Timezone Configuration
# Set the timezone for the scheduler service
# Examples: UTC, Africa/Cairo, America/New_York, Europe/London, Asia/Tokyo
# For Egypt timezone, use: Africa/Cairo
# Default: UTC
TZ=UTC

# Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rune

# RabbitMQ Settings
RABBITMQ_QUEUE_NAME=workflow.execution
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rune
RABBITMQ_PASSWORD=rune_password

# Scheduler Configuration
# How often to check for scheduled workflows (seconds)
SCHEDULER_POLL_INTERVAL=30

# How far ahead to look for scheduled workflows (seconds)
SCHEDULER_LOOK_AHEAD=60

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

