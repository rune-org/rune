{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "packageRules": [
    {
      "description": "Disable all standard updates by default",
      "matchPackagePatterns": ["*"],
      "enabled": false
    }
  ],

  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": ["ashmod"]
  },
  
  "osvVulnerabilityAlerts": true
}
