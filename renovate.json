{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "security:github"
  ],

  "packageRules": [
    {
      "description": "Disable all non-security updates",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "major", "patch", "pin", "digest", "lockFileMaintenance", "rollback", "bump"],
      "enabled": false
    }
  ],

  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": ["ashmod"],
    "commitMessageTopic": "security fix"
  },
  "osvVulnerabilityAlerts": true
}
